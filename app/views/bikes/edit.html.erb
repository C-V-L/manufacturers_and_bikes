<%= form_with url: "/bikes/#{@bike.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :wheel_size %>
  <%= form.text_field :wheelsize %>
  <%= form.label :Carbon? %>
  <%= form.text_field :carbon %>
  <%=  form.submit "Update Bike"%>
<% end %>