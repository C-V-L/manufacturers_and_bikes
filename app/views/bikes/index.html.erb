<h1>Bikes</h1>

<%= link_to "Carbon Bikes", filter: :by_carbon  %>
<% @bikes.each do |bike| %>
  <h3><%= link_to "#{bike.name}", "/bikes/#{bike.id}" %> | <%= link_to "Update #{bike.name}", "/bikes/#{bike.id}/edit" %> </h3>
  <p>Wheel Size: <%= bike.wheelsize %></p>
  <p>Carbon: <%= bike.carbon %></p>
<% end %>